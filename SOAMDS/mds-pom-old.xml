<?xml version="1.0" encoding="UTF-8" ?>
<project xmlns="http://maven.apache.org/POM/4.0.0">
	<modelVersion>4.0.0</modelVersion>
	<groupId>soademo</groupId>
	<artifactId>mds</artifactId>
	<version>1.0-SNAPSHOT</version>
	<packaging>jar</packaging>
	<build>
		<sourceDirectory>${project.basedir}/src</sourceDirectory>
		<resources>
			<resource>
				<directory>${project.basedir}/src</directory>
			</resource>
		</resources>
		<finalName>sca-${project.artifactId}_rev${project.version}</finalName>
		<plugins>
			<plugin>
				<groupId>com.oracle.soa.plugin</groupId>
				<artifactId>oracle-soa-plugin</artifactId>
				<version>12.2.1-3-0</version>
				<!--extensions>true</extensions-->
				<executions>
					<execution>
						<phase>pre-integration-test</phase>
						<goals>
							<goal>deploy</goal>
						</goals>
						<configuration>
							<skip>${skipPreIntegrationTest}</skip>
							<sarLocation>${project.basedir}/target/sca-${project.artifactId}_rev${project.version}.jar</sarLocation>
							<serverUrl>${serverUrl}</serverUrl>
							<user>${user}</user>
							<password>${password}</password>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
